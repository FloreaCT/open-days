<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/headers.ejs') %>
        <link href="css/auth.css" rel="stylesheet">
        <title>Manage users</title>
</head>

<body>
    <%- include('partials/navAdmin.ejs') %>
        <br>

        <div>
            <h1 style="text-align: center;">
                <p class="center_text" style="color:black">All Attenders
                </p>
            </h1>
        </div>
        <br><br>
        <div class="polaroid">
            <div class="top_navbar" style="padding-left: 10px;">

                <form class="d-flex" method="post" action="/findAttender">
                    <input class="form-control me-2" type="search" placeholder="Search for a user or event" name="search" aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>
            </div>
        </div>
        <table class="table table-bordered top_navbar" style="color: white">
            <thead>
                <tr>
                    <th scope="col">UserId</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Event Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% users[0].forEach((item)=>{ %>
                    <form action="<%='/attender/delete'%>" method="POST">

                        <tr>
                            <th scope="row">
                                <%-item.id%>
                                    <input type="hidden" name="id" value="<%=item.id%>">
                            </th>
                            <td>
                                <%=item.firstName%>
                            </td>
                            <td>
                                <%=item.lastName%>
                            </td>
                            <td>
                                <%=item.title%>
                            </td>
                            <td>
                                <button type="submit" value="Delete"><i class="bi bi-person-x"></i> Delete</button>
                            </td>
                        </tr>
                    </form>
                    <%})%>
            </tbody>

        </table>



        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>

</html>