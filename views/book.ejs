<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/headers.ejs') %>
        <title>Register for a Open Day</title>
</head>

<body>
    <% if (user.roleId === 1){ %>
        <%- include('partials/navUser.ejs') %>
            <% } else if (user.roleId === 2 ) { %>
                <%- include('partials/navInstitute.ejs') %>
                    <% } else { %>
                        <%- include('partials/navAdmin.ejs') %>
                            <% } %>
                                <% data.forEach((item)=>{ %>

                                    <div class="polaroid">
                                        <div class="container">
                                            <h1>
                                                <%- item.title  %>
                                            </h1>
                                        </div>

                                        <div>
                                            <img src="<%- item.image %>" alt="ucb" class="image img-max">
                                        </div>
                                        <div class="title">
                                            <h2>
                                                <%- item.description %>
                                            </h2>
                                        </div>
                                        <table class="table table-striped table-bordered table-hover formContainer" style="max-width: 40%; margin: 50px auto 0 auto">
                                            <thead>
                                                <tr>
                                                    <th scope="col" style="text-align: center;" colspan="2">Event timings</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <th scope="row">Event starts at</th>
                                                    <td>
                                                        <%- item.begin_at%>
                                                    </td>

                                                </tr>
                                                <tr>
                                                    <th scope="row">Event ends at</th>
                                                    <td>
                                                        <%- item.ends_at %>
                                                    </td>

                                                </tr>

                                            </tbody>
                                        </table>
                                        <div class="container">
                                            <form method="post" action="/book">
                                                <input type="hidden" name="eventId" id="eventId" value="<%= item.id %>">
                                                <button type="submit" class="submit_button"> Register your interest</button>
                                            </form>
                                        </div>
                                    </div>

                                    <%})%>


                                        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
                                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
                                        <script src="/js/script.js"></script>

</body>

</html>